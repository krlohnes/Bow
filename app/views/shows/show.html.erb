<% unless user_signed_in? %>
  <%= render 'pages/no_access' %>
<% else %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Start time:</strong>
    <%= @show.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= @show.end_time %>
  </p>

  <p>
    <strong>Venue:</strong>
    <%= @show.venue %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @show.address %>
  </p>

  <p>
    <strong>Ticket link:</strong>
    <%= @show.ticket_link %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @show.description %>
  </p>

  <p>
    <strong>City:</strong>
    <%= @show.city %>
  </p>

  <%= link_to 'Edit', edit_show_path(@show) %> |
  <%= link_to 'Back', shows_path %>
<% end %>
