<%= form_for(@show) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group event__form--time">
    <%= f.label :start_time, "Start Time" %>
    <div class='input-group date' id='datetimepicker1'>
        <%= f.text_field :start_time, class: 'form-control', 'data-date-format' => "YYYY-MM-DD hh:mm:ss A" %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
  </script>
  <div class="form-group event__form--time">
    <%= f.label :end_time, "End Time" %>
    <div class='input-group date' id='datetimepicker2'>
        <%= f.text_field :end_time, class: 'form-control', 'data-date-format' => "YYYY-MM-DD hh:mm:ss A"  %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
        $('#datetimepicker2').datetimepicker();
    });
  </script>
  <div class="form-group">
    <%= f.label :venue %><br>
    <%= f.text_field :venue, class: 'event-input' %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, class: 'event-input' %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: 'event-input' %>
  </div>
  <div class="form-group">
    <%= f.label :ticket_link %><br>
    <%= f.text_field :ticket_link, class: 'event-input' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
