<!DOCTYPE html>
<html>
<head>
  <title>Bow</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="//use.typekit.net/pnx6bul.js"></script>
	<script>try{Typekit.load();}catch(e){}</script>
</head>
<body class='hide-nav'>
	<!--Facebook Embed JS-->
	<div id="fb-root"></div>
		<script>
		(function(d, s, id) {
		  var js, fjs = d.getElementsByTagName(s)[0];
		  if (d.getElementById(id)) return;
		  js = d.createElement(s); js.id = id;
		  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.4&appId=187372864654223";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
		</script>
	<!--Facebook Embed JS-->
<div class="site-wrap"><!--Menu Container-->
	<nav id="body-nav"><!--Menu Push-->
    <ul style='left:-28px'>
	    <li><a href='#group3'>BE MY BOW</a></li>
			<li><a href='#group3'>BUY</a></li>
			<li><a href='#group5'>LIVE</a></li>
			<li><a href='#group6'>SOCIAL</a></li>
	  </ul>
  </nav>
	<div class='header'>
	  <%= render 'layouts/header' %>
	  <script>
        (function() {

        "use strict";

        var toggles = document.querySelectorAll(".cmn-toggle-switch");

        for (var i = toggles.length - 1; i >= 0; i--) {
          var toggle = toggles[i];
          toggleHandler(toggle);
        };

        function toggleHandler(toggle) {
          toggle.addEventListener( "click", function(e) {
            e.preventDefault();
            (this.classList.contains("active") === true) ? this.classList.remove("active") : this.classList.add("active");
          });
        }

      })();
      </script>
      <script>
		    $(function() {
		    $('.toggle-nav').click(function() {
		          $('body').toggleClass('hide-nav');
		          $('body').toggleClass('show-nav'); 
		          return false;
		    });
		});
    </script>
	</div>
		<div>
			<%= yield %>
		</div>
	<div class='footer'>
	  <%= render 'layouts/footer' %>
	</div>
		</div><!--End Menu Push-->
	</div><!--End Menu Container-->
</body>
</html>
